@model List<AdvWeb_VN.ViewModels.Catalog.SubCategories.SubCategoryViewModel>

@{
    ViewData["Title"] = "Danh sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper" style="min-height: 1200.88px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Danh sách chuyên mục</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Home">Home</a></li>
                        <li class="breadcrumb-item active">Danh sách chuyên mục con</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">

                        <!-- Tên nằm trên đầu bảng -->
                        <div class="card-header">
                            <a class="btn btn-outline-primary" asp-action="Create" asp-controller="SubCategory">Tạo mới</a>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                @*<div class="row">
                                        <div class="col-sm-12 col-md-6">
                                            <form asp-action="Index" method="get">
                                                <div class="dataTables_length" id="example1_length">
                                                    <label>
                                                        Show entries
                                                        <select name="pageSize" aria-controls="example1"
                                                                class="custom-select custom-select-sm form-control form-control-sm">
                                                            <option value="10">10</option>
                                                            <option value="25">25</option>
                                                            <option value="50">50</option>
                                                            <option value="100">100</option>
                                                        </select>
                                                    </label>
                                                    <button type="submit" class="btn btn-outline-primary">Select</button>
                                                </div>
                                            </form>
                                        </div>
                                        <div class="col-sm-12 col-md-6"">
                                            <form asp-action="Index" method="get">
                                                <div id="example1_filter" class="dataTables_filter">
                                                    <label>
                                                        Search:<input name="keyword" value="@ViewBag.Keyword" type="search" class="form-control form-control-sm" placeholder=""
                                                                      aria-controls="example1">
                                                    </label>
                                                    <button type="submit" class="btn btn-outline-primary">Search</button>
                                                    <button type="button" onclick="window.location.href='/User/Index'" class="btn btn-outline-dark">Reset</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>*@
                                <div class="row" style="margin-top:20px">
                                    <div class="col-sm-12">
                                        <table id="example1"
                                               class="table table-bordered  table-striped dataTable dtr-inline table-hover" role="grid"
                                               aria-describedby="example1_info">
                                            <thead>
                                                <tr role="row">
                                                    <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
                                                        aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">
                                                        ID
                                                    </th>
                                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
                                                        aria-label="Browser: activate to sort column ascending">Tên Chuyên Mục Con</th>
                                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
                                                        aria-label="Browser: activate to sort column ascending">Tên Chuyên Mục Cha</th>
                                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
                                                        aria-label="Platform(s): activate to sort column ascending">Số Bài Viết</th>
                                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
                                                        aria-label="Platform(s): activate to sort column ascending">Ngày Tạo</th>
                                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
                                                        aria-label="Platform(s): activate to sort column ascending">Hiển Thị</th>
                                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
                                                        aria-label="CSS grade: activate to sort column ascending"></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                <tr role="row" class="odd">
                                                    <td tabindex="0" class="sorting_1">
                                                        @Html.DisplayFor(modelItem => item.SubCategoryID)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.SubCategoryName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CategoryName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PostCount)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CreateDate)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.IsShow)
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink("Sửa", "Edit", new { id = item.SubCategoryID }) |
                                                        @Html.ActionLink("Xem", "Details", new { id = item.SubCategoryID }) |
                                                        @Html.ActionLink("Xóa", "Delete", new { id = item.SubCategoryID })
                                                    </td>
                                                </tr>
                                                }
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th rowspan="1" colspan="1">ID</th>
                                                    <th rowspan="1" colspan="1">Tên Chuyên Mục Con</th>
                                                    <th rowspan="1" colspan="1">Tên Chuyên Mục Cha</th>
                                                    <th rowspan="1" colspan="1">Số Bài Viết</th>
                                                    <th rowspan="1" colspan="1">Ngày Tạo</th>
                                                    <th rowspan="1" colspan="1">Hiển Thị</th>
                                                    <th rowspan="1" colspan="1"></th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                                @*<div class="row">
                                        <div class="col-sm-12 col-md-5">
                                            <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">
                                                Showing @pageNow to @pageLast
                                                of @Model.TotalRecords entries
                                            </div>
                                        </div>
                                        @await Component.InvokeAsync("Pager", Model)
                                    </div>
                                *@
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
