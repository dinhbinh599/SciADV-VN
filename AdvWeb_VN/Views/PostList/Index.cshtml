@using AdvWeb_VN.Utilities.Settings
@using AdvWeb_VN.WebApp.Models
@model PostListPageViewModel
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
	var imageFolder = ViewData["BaseAddress"] + "/user-content/";
	Split split = new Split();
	var postTopCount = 5;
	if (Model.Posts.Items.Count < 5) { postTopCount = Model.Posts.Items.Count; }
}

<!-- Breadcrumb -->
<div class="container">
	<div class="bg0 flex-wr-sb-c p-rl-20 p-tb-8">
		<div class="f2-s-1 p-r-30 m-tb-6">
			<a href="/" class="breadcrumb-item f1-s-3 cl9">
				Home
			</a>

			<span class="breadcrumb-item f1-s-3 cl9">
				Blog
			</span>
		</div>

		<div class="pos-relative size-a-2 bo-1-rad-22 of-hidden bocl11 m-tb-6">
			<input class="f1-s-1 cl6 plh9 s-full p-l-25 p-r-45" type="text" name="search" placeholder="Search">
			<button class="flex-c-c size-a-1 ab-t-r fs-20 cl2 hov-cl10 trans-03">
				<i class="zmdi zmdi-search"></i>
			</button>
		</div>
	</div>
</div>

<!-- Page heading -->
<div class="container p-t-4 p-b-40">
	<h2 class="f1-l-1 cl2">
		Bài Viết
	</h2>
</div>

<!-- Post -->
<section class="bg0 p-b-55">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-10 col-lg-8 p-b-80">
				<div class="row">
					@foreach (var item in Model.Posts.Items)
					{
						<div class="col-sm-6 p-r-25 p-r-15-sr991">
							<!-- Item latest -->
							<div class="m-b-45">
								<a href="/post/@item.PostID" class="wrap-pic-w hov1 trans-03">
									<img class="image-post" src="https://localhost:5002/user-content/@item.Thumbnail" alt="IMG">
								</a>

								<div class="p-t-16">
									<h5 class="p-b-5">
										<a href="/post/@item.PostID" class="f1-m-3 cl2 hov-cl10 trans-03">
											@split.NormalizeName(item.PostName, 12)
										</a>
									</h5>

									<span class="cl8">
										<a href="#" class="f1-s-4 cl8 hov-cl10 trans-03">
											by @item.UserName
										</a>

										<span class="f1-s-3 m-rl-3">
											-
										</span>

										<span class="f1-s-3">
											@(item.WriteTime.Day + "/" + item.WriteTime.Month)
										</span>
									</span>
								</div>
							</div>
						</div>
					}
				</div>

				<!-- Pagination -->
				@await Component.InvokeAsync("Pager", Model.Posts)

				@*<div class="flex-wr-s-c m-rl--7 p-t-15">
				<a href="#" class="flex-c-c pagi-item hov-btn1 trans-03 m-all-7 pagi-active">1</a>
				<a href="#" class="flex-c-c pagi-item hov-btn1 trans-03 m-all-7">2</a>
				</div>*@
			</div>

			<!-- Sidebar -->
			@await Component.InvokeAsync("Sidebar")
		</div>
	</div>
</section>

