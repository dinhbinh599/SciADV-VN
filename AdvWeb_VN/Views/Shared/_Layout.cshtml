<!DOCTYPE html>
<html lang="en">

<head>
	<title>@ViewData["Title"]</title>
	@{
		var description = ViewBag.summary ?? ViewBag.description;
	}
	<!--===============================================================================================-->
	<link rel="icon" type="image/png" href="~/images/icons/favicon.png" />
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/fonts/fontawesome-5.0.8/css/fontawesome-all.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/fonts/iconic/css/material-design-iconic-font.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/css/util.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/css/main.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/css/comment.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css"
		href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css"
		href='https://cdn.jsdelivr.net/npm/froala-editor@latest/css/froala_editor.pkgd.min.css' />

	<!-- Basic SEO Meta Tags -->
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="@description">
	<meta name="keywords" content="@ViewBag.keywords">
	<meta name="Author" content="Resker">

	<!-- Canonical URL -->
	<link rel="canonical" href="@ViewBag.ogurl">

	<!-- Google / Search Engine Tags -->
	<meta itemprop="name" content="@ViewBag.ogtitle">
	<meta itemprop="description" content="@description">
	<meta itemprop="image" content="@ViewBag.ogimage">

	<!-- [ Social Media meta tag ] -->
	<!-- Open Graph Meta Tags (Facebook & Social Media) -->
	<meta property="og:type" content="@ViewBag.ogtype">
	<meta property="og:title" content="@ViewBag.ogtitle">
	<meta property="og:url" content="@ViewBag.ogurl">
	<meta property="og:image" content="@ViewBag.ogimage">
	<meta property="fb:app_id" content="1198766781604854" />
	<meta property="og:description" content="@description">
	<meta property="og:site_name" content="Gero Saga">

	<!-- Twitter Meta Tags -->
	<meta property="twitter:title" content="@ViewBag.ogtitle">
	<meta property="twitter:description" content="@description">
	<meta property="twitter:image" content="@ViewBag.ogimage">
	<meta property="twitter:card" content="summary_large_image">
	<meta property="twitter:url" content="@ViewBag.ogurl">



	<style>
		img.img-avatar-comment {
			width: 55px;
			height: 55px
		}
	</style>

	@RenderSection("Style", required: false)

</head>

<body class="animsition">

	<!-- Header -->
	@await Component.InvokeAsync("Header")

	@RenderBody()

	<!-- Footer -->
	@await Component.InvokeAsync("Footer")


	<!-- Back to top -->
	<div class="btn-back-to-top" id="myBtn">
		<span class="symbol-btn-back-to-top">
			<span class="fas fa-angle-up"></span>
		</span>
	</div>

	<!--===============================================================================================-->
	<script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
	<!--===============================================================================================-->
	<script src="~/vendor/animsition/js/animsition.min.js"></script>
	<!--===============================================================================================-->
	<script src="~/vendor/bootstrap/js/popper.js"></script>
	<script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
	<!--===============================================================================================-->
	<script src="~/js/main.js"></script>

	@RenderSection("Scripts", required: false)

	<script type="text/javascript">
		$('input#search').keypress(function (event) {
			var keycode = (event.keyCode ? event.keyCode : event.which);
			if (keycode == '13') {
				if ($('#search').val() != "") {
					window.location.href = "/post-list?keyword=" + $('#search').val();
				}
			}
		});
		$('button#search').click(function () {
			if ($('#search').val() != "") {
				window.location.href = "/post-list?keyword=" + $('#search').val();
			}
		});
	</script>
	<div id="fb-root"></div>
	<script async defer crossorigin="anonymous"
		src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v22.0&appId=1198766781604854&autoLogAppEvents=1">
		</script>
</body>

</html>