@model AdvWeb_VN.ViewModels.Catalog.Posts.PostDeleteRequest

@{
	ViewData["Title"] = "Xóa bài viết";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<a class="btn btn-outline-primary" asp-action="Index" asp-controller="Post">Về danh sách</a>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="/Home">Home</a></li>
						<li class="breadcrumb-item"><a href="/Post">Danh sách bài viết</a></li>
						<li class="breadcrumb-item active">Xóa bài viết</li>
					</ol>
				</div>
			</div>
		</div><!-- /.container-fluid -->
	</section>
	<!-- Main content -->
	<section class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12">
					<!-- general form elements -->
					<div class="card card-primary">
						<div class="card-header">
							<h3 class="card-title">Xóa bài viết</h3>
						</div>
						<div class="card-body">
							<div class="col-md-12">
								<dl class="row">
									<dt class="col-sm-2">
										@Html.DisplayNameFor(model => model.PostID)
									</dt>
									<dd class="col-sm-10">
										@Html.DisplayFor(model => model.PostID)
									</dd>
								</dl>

								<form asp-action="Delete">
									<input asp-for="PostID" type="hidden" />
									<input type="submit" value="Xóa bài viết" class="btn btn-danger" />
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</div>
